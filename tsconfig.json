{
    "compilerOptions": {
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": "src",
        "rootDir": "./",
        "outDir": "build",
        "target": "ES2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}